{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tr-color",
  "version": "0.1.0",
  "identifier": "com.kkt.tr-color",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"

  },
  "app": {
    "windows": [
      {
        "title": "tr-color",
        "width": 280,
        "height": 200,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources"
    ],
    "windows": {
      "nsis": {
        "installMode": "both"
      }
    }
  }
}
